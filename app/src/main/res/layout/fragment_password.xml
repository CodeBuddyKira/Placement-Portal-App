<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.shubhama003.placeme.fragments.PasswordChangeFragment">

    <TextView
        android:layout_width="wrap_content"
        android:textSize="20sp"
        android:id="@+id/pcomplete"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:text="Your Profile is not completed Yet."
        android:layout_height="wrap_content" />

    <LinearLayout
        android:id="@+id/linear"
        android:visibility="gone"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content">

            <EditText

                android:id="@+id/cpasswordy"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:hint="Current Password"
                android:inputType="textPassword"
                android:textColor="@color/mehro"
                android:textColorHint="@android:color/black" />
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/npasswordy"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:hint="New Password"
                android:inputType="textPassword"
                android:textColor="@color/mehro"
                android:textColorHint="@android:color/black" />
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/rpasswordy"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:hint="Retype Password"
                android:inputType="textPassword"
                android:textColor="@color/mehro"
                android:textColorHint="@android:color/black" />
        </android.support.design.widget.TextInputLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:id="@+id/submitit"
            android:layout_marginTop="5dp"
            android:background="@color/colorPrimary"
            android:text="SUBMIT"
            android:layout_gravity="center_horizontal"/>

    </LinearLayout>


</LinearLayout>
