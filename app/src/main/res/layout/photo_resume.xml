<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f0f0f0"
    android:orientation="vertical"
    tools:context="com.example.shubhama003.placeme.fragments.profile.PhotoResumeFragment">

    <LinearLayout
        android:padding="5dp"
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:layout_marginLeft="50dp"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/logomnnit" />

            <ProgressBar
                android:id="@+id/progressBarUpload"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:visibility="gone"
                 />
            <TextView
                android:id= "@+id/progress"
                android:layout_width="wrap_content"
                android:textStyle="bold"
                android:layout_height="wrap_content"
                android:text="0%"
                android:visibility="gone"
                android:layout_gravity="center"
                />
        </FrameLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <Button
                android:id="@+id/updatepic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="42dp"
                android:layout_marginTop="30dp"
                android:background="@color/colorPrimary"
                android:text="Upload"
                android:visibility="invisible"
                android:textColor="#ffffff"
                 />

            <Button
                android:id="@+id/selectpic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="Select picture" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="10dp"
                android:id="@+id/pupdate"
                android:text="Photo update available"
                android:textColor="#000000"
                android:textSize="17dp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="#ffffff"
            android:padding="15dp">

            <Button
                android:id="@+id/selectres"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select Resume" />
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <TextView
                android:layout_gravity="center"
                android:id="@+id/filename"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No file chosen" />

            <ProgressBar
                android:id="@+id/pbar5"
                android:layout_gravity="center"
                android:visibility="gone"
                android:layout_width="100dp"
                android:layout_height="55dp"/>
                <TextView
                    android:layout_gravity="center"
                    android:id="@+id/prog2"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0.0%"/>
            </FrameLayout>
        </LinearLayout>

        <Button
            android:id="@+id/uploaldres"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="10dp"
            android:background="@color/colorPrimary"
            android:padding="7dp"
            android:text="Upload Resume"
            android:textColor="#ffffff"
            android:textSize="15dp"/>

        <Button
            android:id="@+id/downloadres"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="10dp"
            android:background="@color/colorPrimary"
            android:padding="7dp"
            android:text="Download Resume"
            android:textColor="#ffffff"
            android:textSize="15dp" />
    </LinearLayout>

</LinearLayout>
